{
    "name": "VIT Academics Enhancer!",
    "version": "0.4.5",
    "author":"Harshal Varday(harhalvarday1@gmail.com)",
    "manifest_version": 2,
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "browser_action":{
        "default_icon":"down.png"
    },
    "description": "Download all materials from a coursepage of particular faculty and slot, Check attendance by increasing/decreasing number of classes attended and missed, download all TEE QPaper in 1 click.",
    "permissions":["downloads", "*://academics.vit.ac.in/student/*", "tabs"],
    "content_scripts":[
        {
            "matches": ["*://academics.vit.ac.in/student/fac_profile.asp"],
            "all_frames": true,
            "js":["jquery.js","fSearch.js"]
        },
        {
            "matches": ["*://academics.vit.ac.in/student/coursepage_view3.asp"],
            "all_frames": true,
            "js":["cDown.js"]
        },
        {
            "matches":["*://academics.vit.ac.in/student/tee_questionbank_*"],
            "all_frames": true,
            "js":["teeQPaperDown.js"]
        },
        {
            "matches":["*://academics.vit.ac.in/*/attn_report.asp?sem=*&fmdt*"],
            "all_frames":   true,
            "js": ["attendance.js"]
        }
    ],
    "web_accessible_resources":["calc.js"]
}
